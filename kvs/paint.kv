            id: print_area
            on_size: root.on_resize()



<ColorPickerObject>:
    GridLayout:
        size: (root.width, root.height)
        cols:1
        ColorPicker:
            id:color_picker
            text:"Tst"
            size: (root.width, root.height)
        GridLayout:
            spacing:10
            padding: 5
            cols:2
            size_hint: (1, 0.1)
            ImageButton:
                source: "images/accept.png"
                text: "OK"
                on_press: app.commander.accept_color(root.ids['color_picker'].color)
            ImageButton:
                source: "images/decline.png"
                text: "DISCARD"
                on_press: app.commander.deny_color()
