#:kivy 2.0.0

<PaintingMode>:
    GridLayout:
        size: (root.width, root.height)
        cols:1
        rows:3
        GridLayout:
            size_hint: (1, 0.1)
            rows:1
            BoxLayout:
                padding: 5
                orientation: 'vertical'
                ImageButton:
                    id: pen_button
                    text: "Pen"
                    source: "images/paint/pen.png"
                    opacity: 1
                    on_press: root.pen_click()
            BoxLayout:
                padding: 5
                orientation: 'vertical'
                ImageButton:
                    id: eraser_button
                    text: "Eraser"
                    source: "images/paint/eraser.png"
                    opacity: 0.1
                    on_press: root.eraser_click()
            BoxLayout:
                padding: 5
                ImageButton:
                    text: "ColorPicker"
                    on_press: app.commander.color_pick(root.color)
                    source: "images/paint/colorwheel.png"
