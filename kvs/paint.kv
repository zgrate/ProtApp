                ImageButton:
                    text: "Erase"
                    source: "images/file_manager/delete.png"
                    on_press: root.erase_all()
            BoxLayout:
                padding: 5
                orientation: "vertical"
                ImageButton:
                    text: "Exit"
                    source: "images/exit.png"
                    on_press: app.commander.main_menu()
